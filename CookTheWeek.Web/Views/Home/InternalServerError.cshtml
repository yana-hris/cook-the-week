@{
    string message = ViewBag.Message;
    string errorCode = ViewBag.ErrorCode ?? "500";
}
<div id="not-found-container">
    <div class="form-container">
        <h2 class="text-danger text-capitalize mb-1">Oops! </h2>
        <h3 class="text-danger text-uppercase mb-3">Something went wrong.</h3>
        
        <h5 class="mb-1">
            @if (message == null)
            {
                <text>We encountered an internal error on our server. Please try again later or contact support if the issue persists.</text>
            }
            else
            {
                <text>@message</text>
            }
        </h5>
        <p class="fw-bold mb-5">(Error @errorCode)</p>
        
        <p class="fw-bold mb-2">Here are some helpful links instead:</p>

        <!-- Buttons to redirect the user -->
        <div class="row g-2 mb-3">
            <div class="col col-sm-4">
                <a href="/" class="btn btn-primary w-100 text-center">Home</a>
            </div>
            <div class="col col-sm-4">
                <a href="/Recipe/All" class="btn btn-secondary w-100 text-center">Recipes</a>
            </div>
            <div class="col col-sm-4">
                <a href="/Home/Contact" class="btn btn-light w-100 text-center">Contact us</a>
            </div>
        </div>

    </div>

</div>


