@model ContactFormModel
@{
    ViewData["Title"] = "About";

    var headingModel = new PageHeadingViewModel
    {
        Subheading = ViewData["Title"]!.ToString(),
        HeadingSecondary = "App Purpose"
    };
}
<div id="about-container" class="container">
    <partial name="_HeadingPartial" model="headingModel" />

    <div class="row">
        <!-- Image column -->
        <div class="col-12 col-md-4 g-md-3">
            <img class="img-fluid rounded" src="~/img/who-am-i.jpg" alt="creator photo" />
        </div>
        <!-- Text column -->
        <div class="col-12 col-md-8 g-md-3">
            <p>
                Hi, I'm Yana, the founder of CookTheWeek. As a busy mom passionate about homemade dinners, I faced the daily challenge of finding new recipes and optimizing grocery shopping. This inspired me to create CookTheWeek—a user-friendly app designed to help busy parents effortlessly plan and prepare delicious meals.
            </p>
            <p>
                CookTheWeek is born from my love of cooking and my desire to simplify meal planning for households. The app streamlines the process, providing fresh ideas, organizational tools, and convenience for families looking to enjoy wholesome meals without the hassle.
            </p>
            <p>
                I'd love to hear your questions or feedback! Reach out through the form below, and I'll get back to you as soon as possible. 
            </p>
            <p>
                Thank you for choosing CookTheWeek to enhance your meal planning experience!
            </p>
        </div>
    </div>
    <div class="row">
        <div class="contact-form">
            <h2 class="heading-secondary">Have something to say?</h2>
            <p class="contact-form-text">
                Have questions or feedback? Share your thoughts with me and help make CookTheWeek even better!
            </p>

            <form id="feedback-form" method="post" asp-area="" asp-controller="Home" asp-action="SubmitContactForm">
                <div class="row contact-form-row">
                    <div class="col col-12 col-md-6">
                        <div class="input-group">
                            <span class="input-group-text">Your Name</span>
                            <input asp-for="FullName"
                                    type="text"
                                    placeholder="John Smith"
                                    class="form-control"
                                    />
                        </div>
                        <span asp-validation-for="FullName" class="small text-danger"></span>
                    </div>
                    <div class="col col-12 col-md-6">
                        <div class="input-group">
                            <span class="input-group-text">Email address</span>
                            <input asp-for="EmailAddress"
                                    type="email"
                                    class="form-control"
                                    placeholder="me@example.com"
                                    />
                        </div>
                        <span asp-validation-for="EmailAddress" class="small text-danger"></span>
                    </div>
                </div>
                <div class="row contact-form-row">
                    <div class="col col-12">
                        <div class="input-group">
                            <span class="input-group-text">Subject</span>
                            <select class="form-control" asp-for="Subject">
                                <option value="">Please choose one option:</option>
                                <option value="user-experience">User Experience</option>
                                <option value="features">Features</option>
                                <option value="recipes">Recipes</option>
                                <option value="performance">Performance</option>
                                <option value="design">Design</option>
                                <option value="content">Content</option>
                                <option value="customer-support">Customer Support</option>
                                <option value="overall-satisfaction">Overall Satisfaction</option>
                            </select>
                        </div>
                        <span asp-validation-for="Subject" class="small text-danger"></span>
                    </div>
                </div>
                <div class="row contact-form-row">
                    <div class="col col-12">
                        <div class="input-group">
                            <span class="input-group-text">Message</span>
                            <textarea asp-for="Message" rows="5" class="form-control" placeholder="Tell me all about it.."></textarea>
                        </div>
                        <span asp-validation-for="Message" class="small text-danger"></span>
                    </div>
                </div>
                <div class="row btn-row">
                    <div class="col col-12 text-center">
                        <button form="feedback-form" class="btn btn-success text-dark btn-lg" type="submit">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}