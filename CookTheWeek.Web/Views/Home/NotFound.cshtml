@{
    string errorCode = ViewBag.ErrorCode ?? "404";
    string message = ViewBag.Message;
    ViewBag.Title = errorCode == "429" ? "Too Many Requests" : "Page Not Found";

    string heading = errorCode == "429" ? "Whoa there!" : "Oops!";
    string subheading = errorCode == "429" ? "Too Many Requests" : "Page Not Found";
    string defaultMessage = errorCode == "429"
        ? "You're making too many requests in a short time. Please slow down and try again shortly."
        : "It seems we can't find the page you're looking for.";
}
<div id="not-found-container">
    <div class="form-container">
        <h2 class="text-danger text-capitalize mb-1">@heading</h2>
        <h2 class="text-danger text-uppercase mb-2">@subheading</h2>
        <h5 class="mb-1">
            @if (message == null)
            {
                <text>@defaultMessage</text>
            }
            else
            {
                <text>@message</text>
            }
        </h5>
        <p class="fw-bold mb-5">(Error @errorCode)</p>
        <p class="fw-bold mb-2">Here are some helpful links instead:</p>

        <!-- Buttons to redirect the user -->
        <div class="row g-2 mb-3">
            <div class="col col-sm-4">
                <a href="/" class="btn btn-primary w-100 text-center">Home</a>
            </div>
            <div class="col col-sm-4">
                <a href="/Recipe/All" class="btn btn-secondary w-100 text-center">Recipes</a>
            </div>
            <div class="col col-sm-4">
                <a href="/Home/Contact" class="btn btn-light w-100 text-center">Contact us</a>
            </div>            
        </div>
       
    </div>
   
</div>


