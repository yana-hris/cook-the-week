@model RecipeIngredientFormViewModel

<div class="form-group col-5">   
    <div class="row">
        <div class="col d-flex">
            <input type="text" id="addIngredient" asp-for="Name" class="form-control me-2" style="min-width: 12rem" autocomplete="off" />
            <ul id="ingredientsSuggestionList"></ul>
            <div class="d-flex gap-1 buttons">
                <div class="addButton">
                    <button class="btn btn-primary text-light" asp-area="" asp-controller="RecipeIngredientController" asp-action="Add">+</button>
                </div>
                <div class="removeBtn">
                    <button class="btn btn-secondary text-light">-</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
</div>

