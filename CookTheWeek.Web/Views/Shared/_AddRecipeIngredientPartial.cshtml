@model RecipeIngredientFormViewModel
@using static CookTheWeek.Common.NotificationMessagesConstants


<div id="ingredientContainer" class="row g-3 form-group">
    <div class="col-md-4">
        <label asp-for="Name" class="form-label">Ingredient</label>
        <input asp-for="Name" class="form-control me-2" id="addIngredient" style="min-width: 8rem" autocomplete="off" />
        <div class="position-absolute invisible ingredientsSuggestionList">
            <!-- Dropdown suggestions should goes here -->
        </div>
    </div>
    <!-- Qty Input -->
    <div class="col-2">
        <label asp-for="Qty" class="form-label">Qty</label>
        <input id="qty" asp-for="Qty" class="form-control" placeholder="Qty">
    </div>
    <!-- Measure Selection -->
    <div class="col-2">
        <label asp-for="MeasureId" class="form-label">Measure</label>
        <select id="measure" asp-for="MeasureId" class="form-control">
            @foreach (var measure in @Model.Measures)
            {
                <option value="@measure.Id">@measure.Name</option>
            } 
        </select>
    </div>
    <!-- Specification -->
    <<div class="col-2">
        <label asp-for="SpecificationId" class="form-label"><small>*Optional</small></label>
        <select id="spec" asp-for="SpecificationId" class="form-control">
            <option selected>Condition...</option>
            @foreach (var spec in @Model.Specifications)
            {
                <option value="@spec.Id">@spec.Description</option>
            }
        </select>
    </div>
    <!-- Buttons for ADD/REMOVE ingredient -->
    <div id="addButton" class="btnContainer col-2">
        <ion-icon class="icons add" name="add-circle"></ion-icon>
        <a href="#" class="btn"></a>
    </div>
</div>
<div class="row py-3">
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">Ingredient</th>
                <th scope="col">Qty</th>
                <th scope="col">Measure</th>
                <th scope="col">Note</th>
                <th scope="col">Remove</th>
            </tr>
        </thead>
        <tbody id="ingredientsList">
        </tbody>
    </table>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}