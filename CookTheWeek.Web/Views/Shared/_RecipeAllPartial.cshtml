@model RecipeAllViewModel

<div class="col-md-4">
    <div class="card mb-3 rounded-5" style="width: 18rem;">
        <img src="@Model.ImageUrl" class="card-img-top" alt="Recipe Image">
        <div class="card-body pt-1">
            <div class="row mb-1">
                <div class="col-md-6">
                    <span class="badge bg-primary text-light">@Model.Category.Name</span>
                </div>
            </div>
            <div class="d-flex justify-content-between pb-3">
                <div>
                    <i class="fa-solid fa-utensils"></i> <span>@Model.Servings</span>
                </div>   
                <div>
                    <i class="fa-solid fa-clock"></i> <span>@Model.CookingTime</span>
                </div>
            </div>            
            <div class="d-grid pb-2">
                <h5 class="card-title">@Model.Title</h5>   
                <a asp-asp-area="" asp-asp-controller="Recipe" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">View Recipe</a>
            </div>              
        </div>
    </div>
</div>



