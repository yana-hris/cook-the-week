@model IngredientFormViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Ingredient...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>      
            <div class="form-group">
                <label asp-for="IngredientCategoryId"></label>
                <select asp-for="IngredientCategoryId" class="form-control">
                    @foreach (var category in Model.IngredientCategories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="IngredientCategoryId" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Add Ingredient" />
            </div>
        </form>
    </div>
</div>

