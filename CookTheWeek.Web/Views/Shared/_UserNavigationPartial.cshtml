@{
    string returnUrl = ViewBag.ReturnUrl ?? "/Recipe/All";
}
<header class="no-print">
    <nav id="user" class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div id="nav-container" class="container">
            <a class="navbar-brand accent-heading" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/img/logo-big.png" alt="CookTheWeek Logo" class="navbar-logo">
                <span class="brand-name">CookTheWeek</span>
            </a>
            <div id="navigation-buttons" class="collapse navbar-collapse">
                <ul id="nav-list" class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Recipe" asp-action="All">Browse Recipes</a></li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Recipe" asp-action="Mine">My Recipes</a></li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Recipe" asp-action="Add" asp-route-returnUrl="@(ViewBag.ReturnUrl ?? returnUrl)">Add Recipe</a></li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="MealPlan" asp-action="Mine" asp-route-returnUrl="@(ViewBag.ReturnUrl ?? returnUrl)">Meal Plans</a>
                    </li>
                    <li class="nav-item user-btn">
                        <a class="nav-link active icon-btn" asp-aria="" asp-controller="User" asp-action="Logout"><i class="fa fa-sign-out"></i></a>
                    </li>
                </ul>
            </div>
            <button class="navbar-toggler collapsed d-flex d-lg-none flex-column justify-content-around" data-bs-target="#navigation-buttons" data-bs-toggle="collapse">
                <span class="visually-hidden">Toggle navigation</span>
                <span class="toggler-icon top-bar"></span>
                <span class="toggler-icon middle-bar"></span>
                <span class="toggler-icon bottom-bar"></span>
            </button>
        </div>
    </nav>
</header>