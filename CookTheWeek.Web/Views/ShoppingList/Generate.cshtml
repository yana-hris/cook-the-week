@model ShoppingListViewModel
@{
    ViewData["Title"] = "Shopping List";
}

<div id="shopping-list">
    <partial name="_ProductsByCategoriesPartial", model="@Model" />
    <a id="generatePdfBtn" class="btn btn-primary text-white">
        <i class="fa fa-download"></i>
    </a>
    <a id="backBtn" class="btn btn-outline-primary">
        <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
    </a>
</div>
    
<script>
    $(document).ready(function () {
        // Attach click event to the button
        $('#generatePdfBtn').click(function (e) {
            e.preventDefault();
            debugger;
            // Navigate to the controller action URL to trigger download
            window.location.href = '/ShoppingList/GeneratePdf?id=@Model.Id';
        });

        $('#backBtn').click(function () {
            window.history.back();
            return false; // Prevents any server-side postback
        });
    });
</script>







