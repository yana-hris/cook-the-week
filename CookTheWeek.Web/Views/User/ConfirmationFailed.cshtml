@{
    ViewData["Title"] = "Confirmation Failed";
}
<div id="access-denied">
    <div class="form-container">
        <h3 class="text-uppercase mb-4">Email Confirmation Failed</h3>

        <p>For some reason your Email Confirmation attempt was unsuccessful!</p>
        <p class="mb-3">You can try again by going back to Register.</p>
       
        <p class="fw-bold mb-2">To go back, choose one of the following:</p>

        <div class="row g-2 my-2 mb-4">
            <div class="col-6">
                <a href="@Url.Action("Register", "User")" class="register-btn">Register</a>
            </div>
            <div class="col-6">
                <a href="@Url.Action("Index", "Home")" class="back-to-home-btn">Back to Home</a>
            </div>
        </div>
    </div>
</div>

