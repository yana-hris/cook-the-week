@model ForgotPasswordFormModel
@{
    ViewData["Title"] = "Forgot Password";
}
<div id="user-forgot-password">
    <div class="form-container">
        <h2 class="text-capitalize mb-1">@ViewData["Title"]?</h2>
        <h6 class="text-uppercase mb-4">Enter email to reset</h6>

        <form asp-area="" asp-controller="User" asp-action="ForgotPassword" method="post">
            <div class="mb-4">
                <div class="input-group">
                    <span class="input-group-text">Email</span>
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="small text-danger"></span>
                <p class="small text-muted my-0 text-start">Remember your password? <span class="custom-link"><a href="/User/Login">Login here</a></span></p>
            </div>
            
            <div class="mb-2">
                <button type="submit" class="reset-password-btn">Reset Password</button>
            </div>
        </form>
        
    </div>
</div>


@section Scripts {
    <partial name="_JQueryValidationPartial.cshtml" />
}

