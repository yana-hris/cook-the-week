@using Microsoft.AspNetCore.Authentication.Facebook
@using Microsoft.AspNetCore.Authentication.Google

@model LoginFormModel
@{
    ViewData["Title"] = "Log in";
}

<div id="user-login" class="image-overlay">
    <div class="form-container">
        <h2 class="text-center text-uppercase">@ViewData["Title"]</h2>        
        <form method="post" asp-controller="User" asp-action="Login">
            <h5 class="text-center">Use a local account</h5>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Username" class="form-label"></label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox">
                    <label asp-for="RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary w-100 text-center">Log in</button>
            </div>
            <div>
                <p>Don`t have an account? 
                    <a class="custom-link" asp-controller="User" asp-action="Register">Sign up here</a>
                </p>
            </div>
            <h3 class="text-uppercase text-center">Or</h3>
            <hr />
            <div class="row my-2 mb-3">
                <!-- Google btn -->
                <div class="col-6">
                    <a href="@Url.Action("ExternalLogin", "User", new { schemeProvider = GoogleDefaults.AuthenticationScheme })" class="btn external-login-button w-100 text-center">
                        <img class="external-login-icon" src="~/img/google.png" />
                        Sign up with Google
                    </a>
                </div>                             
                <!-- Facebook btn-->
                <div class="col-6">
                    <a href="@Url.Action("ExternalLogin", "User", new { schemeProvider = FacebookDefaults.AuthenticationScheme })" class="btn external-login-button w-100 text-center">
                        <img class="external-login-icon" src="~/img/facebook.png" />
                        Continue with Facebook
                    </a>
                </div>
                
            </div>
            <p class="text-center"><span class="small-text">By continuing, you agree to our <span class="custom-link">Terms of Use</span> and acknowledge that you have read our <span class="custom-link">Privacy Policy</span></span>.</p>
        </form>
                
    </div>
    
</div>


@section Scripts {
    <partial name="_JQueryValidationPartial.cshtml" />
}