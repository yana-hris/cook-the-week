@{
    ViewData["Title"] = "Forgot Password Confirmation";
}
<div id="user-forgot-password-confirmation">
    <div class="form-container">
        <h5 class="text-center text-uppercase mb-4 text-danger">Password Reset Requested</h5>

        <p class="text-center">If an account with that email address exists, you will receive an email with instructions on how to reset your password.</p>
        <p class="text-center">Please check your inbox.</p>
        
        <div class="row g-2 my-2 mb-3">
            <div class="col-12">
                <a href="@Url.Action("Index", "Home")" class="back-to-home-btn">Back to Home</a>
            </div>
        </div>
        <p class="small text-center">If you didn`t request this email, there`s nothing to worry about - you can safely ignore it.</p>
    </div>
</div>




