@{
    ViewData["Title"] = "Confirmed Email";
}
<div id="user-email-confirmed">
    <div class="form-container">
        <h3 class="text-center text-uppercase mb-4">Successful Registration</h3>

        <p class="user-text">            
            Thank you for confirming your email! 🎉
        </p>
        <p class="user-text mb-4">
            Welcome to CookTheWeek – you’re now officially a member. 
        </p>        
        
        <h6 class="suggested-links-message mb-5">Start exploring and enjoy the full site functionality right now:</h6>

        <div class="buttons-two">
                <a href="@Url.Action("All", "Recipe")" class="browse-btn">Recipes</a>
                <a href="@Url.Action("Profile", "User")" class="profile-btn">Profile</a>
        </div>
        <div class="mb-0">
            <p class="redirection-message fw-bold">You will be redirected to the homepage in<span class="text-danger small fw-bold d-inline-block" id="countdown">30</span> seconds.</p>
            <p class="redirection-message">If the page doesn't redirect, <a href="/Home/Index">click here</a>.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        let countdown = 30;

        updateCountdown();
        // Function to update the countdown and redirect
        function updateCountdown() {
            debugger;
            document.getElementById('countdown').textContent = countdown;
            countdown--;

            if (countdown < 0) {
                window.location.href = '/Home/Index';
            } else {
                setTimeout(updateCountdown, 1000);
            }
        }

    </script>
}

