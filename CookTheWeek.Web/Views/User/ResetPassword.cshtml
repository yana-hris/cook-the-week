@model ResetPasswordFormModel
@{
    ViewData["Title"] = "Reset Password";
}

<div id="user-reset-pass" class="image-overlay food-background">
    <div class="form-container change-pass">
        <h5 class="text-center text-uppercase mb-4">@ViewData["Title"]</h5>
        
        <div asp-validation-summary="ModelOnly" class="small text-danger"></div>

        <form asp-controller="User" asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">New Password</span>
                    <input asp-for="Password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="small text-danger"></span>
            </div>
            <div class="mb-5">
                <div class="input-group">
                    <span class="input-group-text">Confirm Password</span>
                    <input asp-for="ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="small text-danger"></span>
            </div>
            <div class="mb-4">
                <button type="submit" class="btn btn-danger w-100 text-center">Reset Password</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_JQueryValidationPartial.cshtml" />
}

