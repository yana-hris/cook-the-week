@model IEnumerable<SelectViewModel>
@{
    ViewBag.Title = "All Ingredient Categories";
}
<div class="container">
    <h2 class="text-center">@ViewBag.Title</h2>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th><label>Id</label></th>
                <th><label>Name</label></th>
                <th><label>Edit</label></th>
                <th><label>Delete</label></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td><label>@category.Id</label></td>
                    <td><label>@category.Name</label></td>
                    <td><label><a asp-area="Admin" asp-controller="CategoryAdmin" asp-action="EditIngredientCategory" asp-route-id="@category.Id">✔</a></label></td>
                    <td><label><a asp-area="Admin" asp-controller="CategoryAdmin" asp-action="DeleteIngredientCategory" asp-route-id="@category.Id">❌</a></label></td>
                </tr>
            }
        </tbody>
    </table>
</div>

