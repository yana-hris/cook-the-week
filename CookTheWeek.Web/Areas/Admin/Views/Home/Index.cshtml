@{
    ViewData["Title"] = "Home Page";
}
<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> recipes, ingredients and categories.
        <br />You can <b>edit</b> and <b>delete</b> the other user`s recipes, too!
    </p>
    <p class="lead mt-1">
        You can also see <b>all users</b> and <b>all recipes</b> in the
        system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Recipe" asp-action="All" class="btn btn-primary btn-lg">All Recipes</a>
    <a asp-area="" asp-controller="Recipe" asp-action="Add" class="btn btn-primary btn-lg">Add Recipe</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="Recipe" asp-action="Mine"
       class="btn btn-primary btn-lg">My Recipes</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="Ingredient" asp-action="All"
       class="btn btn-primary btn-lg">All Ingredients</a>
    <a asp-area="Admin" asp-controller="Ingredient" asp-action="Add"
       class="btn btn-primary btn-lg">Add Ingredient</a>
    <a asp-area="Admin" asp-controller="Ingredient" asp-action="All"
       class="btn btn-primary btn-lg">All Categories</a>
    <a asp-area="Admin" asp-controller="Category" asp-action="Add"
       class="btn btn-primary btn-lg">Add Category</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>