@{
    ViewData["Title"] = "Home Page";
}
<div id="admin-container">
    <h1>Hello, Admin!</h1>
    <p class="admin-msg">Here you can view, edit, delete all added recipes, as well as add new ones. You can add, edit and delete Ingredients. You can also add, edit and delete Recipe categories and Ingredient Categories. You can view all registered Users. Finally, you can view all Meal Plans.</p>
    <div class="row gy-3 gx-4">
        <div class="col col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-body text-center">
                    <h4 class="card-title">Recipes</h4>
                    <h6 class="text-muted card-subtitle mb-2">Total</h6>
                    <p class="card-text big-number">256</p>
                    <div class="card-links">
                        <a href="#" asp-area="" asp-controller="Recipe" asp-action="Add">Add</a>
                        <a href="#" asp-area="" asp-controller="Recipe" asp-action="All">View All</a>
                        <a href="#" asp-area="" asp-controller="Recipe" asp-action="Mine">View Mine</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-body text-center">
                    <h4 class="card-title">Recipe Categories</h4>
                    <h6 class="text-muted card-subtitle mb-2">Total</h6>
                    <p class="card-text big-number">6</p>
                    <div class="card-links">
                        <a href="#" asp-area="Admin" asp-controller="Category" asp-action="AddRecipeCategory">Add</a>
                        <a href="#" asp-area="Admin" asp-controller="Category" asp-action="AllRecipeCategories">View All</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-body text-center">
                    <h4 class="card-title">Ingredients</h4>
                    <h6 class="text-muted card-subtitle mb-2">Total</h6>
                    <p class="card-text big-number">1892</p>
                    <div class="card-links">
                        <a href="#" asp-area="Admin" asp-controller="Ingredient" asp-action="Add">Add</a>
                        <a href="#" asp-area="Admin" asp-controller="Ingredient" asp-action="All">View All</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-body text-center">
                    <h4 class="card-title">Ingredient Categories</h4>
                    <h6 class="text-muted card-subtitle mb-2">Total</h6>
                    <p class="card-text big-number">13</p>
                    <div class="card-links">
                        <a href="#" asp-area="Admin" asp-controller="Category" asp-action="AddIngredientCategory">Add</a>
                        <a href="#" asp-area="Admin" asp-controller="Category" asp-action="AllIngredientCategories">View All</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-body text-center">
                    <h4 class="card-title">Users</h4>
                    <h6 class="text-muted card-subtitle mb-2">Total</h6>
                    <p class="card-text big-number">15</p>
                    <div class="card-links">
                        <a href="#" asp-area="Admin" asp-controller="User" asp-action="All">View All</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-body text-center">
                    <h4 class="card-title">MealPlans</h4>
                    <h6 class="text-muted card-subtitle mb-2">Total</h6>
                    <p class="card-text big-number">149</p>
                    <div class="card-links">
                        <a href="#">View All</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>